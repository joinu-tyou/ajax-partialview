     <script >



        function GetStudents(filters) {
            $.ajax({
                url: '/Home/Students',
                headers: { "RequestVerificationToken":"@(Xsrf.GetAndStoreTokens(Context).RequestToken)" },
                type: 'POST',
                cache: false,
                async: true,
